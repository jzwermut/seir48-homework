<h1> <%= @book.title %>'s details'</h1>
<%= image_tag @book.image, :class=> 'feature' %>
<ul>
  <li>Title: <%= @book.title %></li>
  <% if @book.author.present? %>
    <li><%= link_to @book.author.name, @book.author %></li>
  <% end %>
  <li>Price: <%= number_to_currency(@book.price) %></li>
  <li>Published: <%= @book.published%></li>
</ul>

<div class="directory">
  <%= link_to "Edit", edit_book_path(@book), :data => {:confirm => "Are you sure you want to edit this book?"} %>
  <%= link_to "Delete", @book, :method => 'delete', :data => {:confirm => "Do you want to delete this book?"} %>
</div>
