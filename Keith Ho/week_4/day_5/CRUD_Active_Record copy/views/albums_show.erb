<h1>
  <%= @album.name %>
  <% if @album.thumbs_up == 1 %>
    <span>| 👍</span>
  <% end %>
</h1>

<% unless @album.image.nil? || @album.image.empty? %>
  <img class="album-image" src="<%= @album.image %>" alt="<%= @album.name %>">
<% end %>

<ul>
<% @songs.each do |song| %>
  <% if song.album.upcase == @album.name.upcase %>
    <li><a href="/songs/<%= song.id %>"><%= song.name %>
      <% if song.thumbs_up == 1 %>
        <span>| 👍</span>
      <% end %>
    </a></li>
  <% end %>
<% end %>
</ul>

<div class="controls">
  <a href="/albums/<%= @album.id %>/edit">Edit Album</a>
  <a href="/albums/<%= @album.id %>/delete">Delete Album</a>
</div>
