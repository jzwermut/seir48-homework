
<div class="beer-display">
<h3>Name: <%= @beer["name"] %> </h3>
<h3>Brand: <%= @beer["brand"] %> </h3>
<h3>Style: <%= @beer.style[:name] %> </h3>
<h3>ABV: <%= @beer["abv"] %> </h3>
<h3>Country: <%= @beer["country"] %> </h3>

</div>
<div class="beer-image">
<!-- prevent broken empty img tags displaying-->
<% unless @beer["image"].nil? || @beer["image"].empty? %>
    <img src="<%= @beer["image"] %>" alt="<%= @beer["name"] %>" width="200">
<% end %>
<!-- <%= %> echoing tag ----->
<!-- <% %> non-echoing tag -->
</div>

