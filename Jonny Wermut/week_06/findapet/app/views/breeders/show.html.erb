<h2> <%= @breeder.name %></h2>

<ul class="list-group">
<li class="list-group-item"> <%= @breeder.city %> </li> 
<li class="list-group-item"> <%= @breeder.state %> </li> 
<li class="list-group-item"> <%= image_tag @breeder.photo %> </li>
</ul>

<br>

<h2>Our breeds </h2>
<% @breeder.breeds.each do |breed| %>
<ul class = "list-group">
<li class="list-group-item"> <%= breed.name %> </li>
<li class="list-group-item"> <%= breed.origin %> </li>
<% if breed.photo.present? %>
<li class="list-group-item"> <%= image_tag breed.photo %> </li>
<% end %>
<% end %>
</ul>

<% if @current_user.present? && @current_user.isBreeder? %>
<%= link_to 'Edit breeder', edit_breeder_path %>
<%= link_to 'Delete breeder', @breeder, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
<%= link_to 'View users', user_path %>
<% end %>