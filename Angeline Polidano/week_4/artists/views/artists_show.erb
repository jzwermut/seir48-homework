<h1><%= @artist.name %></h1>

<% unless @artist.image.nil? || @artist.image.empty? %>
 <img src="<%= @artist.image %>" alt="@artist.name %>">
<% end %>

<div class="controls">
  <a href="/artists/<%= @artist.id %>/edit">Edit artist</a>
  <a href="/artists/<%= @artist.id %>/delete">Delete artist</a>
</div>
