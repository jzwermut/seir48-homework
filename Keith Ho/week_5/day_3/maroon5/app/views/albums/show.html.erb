<h1>
  <%= @album.name %>
  <% if @album.thumbs_up == true %>
    <span>👍</span>
  <% else %>
    <span>👎</span>
  <% end %>
</h1>

<h3>Released: <%= @album.released.strftime '%B %e, %Y' if @album.released.present? %></h3>

<%= image_tag @album.image, :class => "feature" if @album.image.present? %>

<ul class="song-show">
  <% @album.songs.each do |song| %>
    <li><%= link_to song.name, song %></li>
  <% end %>
</ul>


<div class="controls">
  <%= link_to "Edit Album", edit_album_path(@album) %>
  <%= link_to "Delete Album", @album, :method => "delete", :data => { :confirm => "Are you sure you want to delete this album?!" } %>
</div>
