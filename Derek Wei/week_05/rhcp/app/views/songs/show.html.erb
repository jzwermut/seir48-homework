<h1><%= @song.name %></h1>

<ul>
  <li>Title: <%= @song.name %></li>
  <% if @song.album.present? %>
    <li>Album: <%= link_to @song.album.name, @song.album %></li>
  <% end %>
</ul>

<% unless @song.video.nil? || @song.video.empty? %>
<div class="video">
  <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @song.video.split('v=')[1]%>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>
<% end %>

<p><%= @song.description %></p>

<div class="controls">
  <%= button_to 'Edit song', edit_song_path(@song), :method => 'get' %>
  <%= button_to 'Delete song', @song, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
