<h1>Edit Artist</h1>

<form action="/artists/<%= @artist.id %>" method="post">
  <label>
    Name:
    <input name="name" placeholder="Queen" required value="<%= @artist.name %>">
  </label>

  <label>
    genre:
    <input name="genre" placeholder="Rock" required value="<%= @artist.genre %>">
  </label>

  <label>
    Image:
    <input type="url" name="image" placeholder="http://..." value="<%= @artist.image %>">
  </label>

  <button>Update artist</button>
</form>
